{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["./assets/*"],
      "@component/*": ["./component/*"],
      "@page/*": ["./page/*"],
      "@style/*": ["./assets/style/*"],
      "@image/*": ["./assets/image/*"],
      "@utils/*": ["./utils/*"],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": ["node_modules/@types", "src"],
  },
  "include": [
    "src"
  ],
}
